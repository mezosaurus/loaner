
<%= form_for @item do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :name %><br>
      <%= @item.name %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :description %><br>
      <%= @item.description %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-md-4">
        <%= f.label :borrower_id %><br>
        <div class="input-group">
          <%= f.collection_select(:borrower_id, current_user.borrowers, :id, :name, {}, {:class => "form-control"}) %>
          <span class="input-group-btn">
            <%= link_to 'New Borrower', new_borrower_path, :class => "btn btn-default" %>
          </span>
        </div>
    </div>
  </div>

  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>
